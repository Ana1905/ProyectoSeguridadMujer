<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HelpPostCardView"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/user_profilepic_helping_network"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@color/purple_200" />

            <TextView
                android:id="@+id/user_name_helping_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/user_profilepic_helping_network"
                android:text="nombre"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/post_category_label_helping_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name_helping_network"
                android:layout_toRightOf="@+id/user_profilepic_helping_network"
                android:text="categoria" />

            <Button
                android:id="@+id/Delete_Button_HN"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:background="@drawable/deletebuttonwaton" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_category_label_helping_network"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_content_label_helping_network"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cual era la puta necesidad de un pinche texto tan perro largo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginLeft="125dp"
                    android:layout_marginEnd="21dp"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:id="@+id/Add_Comment_Edit_Text_helping_network"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom"
                        android:layout_weight="5"
                        android:hint="Agrega un comentario" />

                    <Button
                        android:id="@+id/Add_Comment_Send_Button_helping_network"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_menu_send"
                        android:visibility="invisible"
                        android:layout_weight="5"
                        />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>