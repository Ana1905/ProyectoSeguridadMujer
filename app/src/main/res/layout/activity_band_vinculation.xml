<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Login_Layout_Background"
    tools:context=".BandVinculationActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ButtonBandVinculationBack"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/back_button"
        android:drawableStart="@drawable/back_foreground"
        android:text="@string/back_label" />

    <TextView
        android:id="@+id/text_view_mostrar_dispositivos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/choose_bracelate"
        android:textSize="19sp"
        android:textStyle="bold"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/boton_cerrar_conexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/delete_button"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/disconnect_bracelate"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/boton_mostrar_dispositivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="20dp"
        android:textColor="@color/white"
        android:background="@drawable/back_button"
        android:text="@string/show_connected_devices"
        android:layout_marginTop="5dp"/>

    <ListView
        android:id="@+id/list_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/Light_Gray"/>

</LinearLayout>