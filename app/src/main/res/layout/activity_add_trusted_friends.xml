<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="78dp"
                android:background="@drawable/logo_shape"
                android:src="@drawable/logo_app"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_configurar_alerta"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_in_button_shape"
                android:paddingHorizontal="10dp"
                android:text="Configurar alerta"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                />

            <Button
                android:id="@+id/alert_Add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sign_in_button_shape"
                android:paddingHorizontal="10dp"
                android:text="Añadir contacto"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="visible"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/labelMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/edit_text_margin"
            android:gravity="center"
            android:text="Si deseas que tus contactos de confianza puedan recibir la alerta vía WhatsApp, pídeles que envíen por medio de dicha aplicación el código 'join government-note' al número +1 415 523 8886"
            android:textColor="@color/white"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/Gray"
            android:textSize="15sp"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/button_pulsera"
            android:layout_width="266dp"
            android:layout_height="44dp"
            android:background="@drawable/sign_in_button_shape"
            android:paddingHorizontal="10dp"
            android:text="Conectar pulsera"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/TextViewLabeladd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aún no tienes contactos de confianza, añade uno:"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/imageViewAdd"
            android:layout_width="256dp"
            android:layout_height="240dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/alert_Add_friend"
            android:layout_width="266dp"
            android:layout_height="44dp"
            android:background="@drawable/sign_in_button_shape"
            android:paddingHorizontal="10dp"
            android:text="@string/alert_añadir_contacto"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre"
            android:layout_marginHorizontal="@dimen/edit_text_margin"
            android:background="@drawable/edit_text_shape"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:padding="10sp"
            android:visibility="invisible"
            android:textColor="@color/Gray_highlight"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/Gray" />

        <EditText
            android:id="@+id/telefono"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="telefono"
            android:layout_marginHorizontal="@dimen/edit_text_margin"
            android:background="@drawable/edit_text_shape"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:padding="10sp"
            android:enabled="false"
            android:visibility="invisible"
            android:textColor="@color/Gray_highlight"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/Gray"
            android:layout_marginTop="15dp"
            android:maxLength="13"/>

        <Button
            android:id="@+id/add_confirm_button"
            android:layout_width="266dp"
            android:layout_height="44dp"
            android:background="@drawable/sign_in_button_shape"
            android:paddingHorizontal="10dp"
            android:text="Confirmar contacto"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>


</RelativeLayout>